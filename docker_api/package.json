{
  "name": "docker_api",
  "version": "0.0.0",
  "description": "Dockerized WebAPI",
  "main": "./app/server.js",
  "type": "module",
  
  "scripts": {
    "start": "nodemon ./app/server.js",
    "test": "env BABEL_ENV=test  mocha --no-config --timeout 10000"
  },
  
  "author": "Alberto L. Bonfiglio",
  
  "license": "ISC",
  
  "eslintIgnore": ["node_modules"],
  
  "babel": {
    "env": {
      "build": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties"
        ]
      },
      "test": {
        "presets": [
          "@babel/env"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  
  "mocha": {
    "diff": true,
    "extension": ["js"],
    "require": ["@babel/register"],
    "opts": false,
    "package": "./package.json",
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd",
    "spec": "./test/*.spec.js",
    "watch-files": [
      "./app/*.js",
      "./test/*.spec.js"
    ],
    "watch-ignore": [
      "./node_modules/**"
    ]
  },
  
  "dependencies": {
    "body-parser": "^1.19.0",
    "canvas": "^2.6.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.2",
    "pdf-image": "^2.0.0",
    "rembrandt": "^0.1.3",
    "unoconv-promise": "^1.0.8",
    "uuidv4": "^6.0.6"
  },

  "devDependencies": {
    "@babel/core": "^7.8.7",
    "babel-loader": "^8.0.6",
    "@babel/cli": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.8.7",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^7.1.0",
    "mocha-junit-reporter": "^1.23.3",
    "webpack": "^4.42.0"
  }
}
